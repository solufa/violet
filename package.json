{
  "name": "violet",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "generate": "pnpm --filter {./pkg/**}... run _:generate",
    "dev": "run-s generate dev:all",
    "dev:all": "pnpm run --parallel --filter {./pkg/**}... _:dev",
    "lint": "run-s generate lint:js lint:prettier lint:style",
    "lint:js": "eslint --ext .ts,.tsx,.js .",
    "lint:prettier": "prettier --check \"./**/*.{ts,tsx,js}\"",
    "lint:style": "stylelint \"**/*.ts{,x}\"",
    "lint:fix": "pnpm run lint:js -- --fix && prettier --write \"./**/*.{ts,tsx,js}\" && pnpm run lint:style -- --fix && pnpm --dir=./pkg/api run prisma:format",
    "lint:hadolint": "ts-node -T ./node_modules/@violet/scripts/hadolint.ts --dir=./docker",
    "build": "pnpm run generate && pnpm run --filter ./pkg/web --filter ./pkg/api --filter=!./pkg/lambda _:build",
    "build-all": "pnpm run generate && pnpm run --filter ./pkg/web --filter ./pkg/api _:build",
    "start": "pnpm run --parallel --filter {./pkg/**}... start",
    "test": "pnpm run generate && pnpm run --filter {./pkg/**}... _:test",
    "test:ci:conv2img": "pnpm run generate && pnpm run --dir=./pkg/scripts _:test:ci:conv2img --",
    "typecheck": "pnpm run generate && pnpm run --filter {./pkg/**}... _:typecheck",
    "prepare": "husky install"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "pluginSearchDirs": [
      "."
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@testing-library/react": "^12.0.0",
    "@types/busboy": "^0.2.4",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.5",
    "@types/node-fetch": "^2",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/styled-components": "^5.1.13",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "@violet/scripts": "workspace:*",
    "babel-jest": "^27.1.0",
    "commitlint": "^14.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "esbuild": "^0.13.10",
    "esbuild-node-externals": "^1.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-react": "^7.25.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "fastify": "^3.20.2",
    "fastify-cors": "^6.0.2",
    "frourio": "^0.25.1",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "isomorphic-fetch": "^3.0.0",
    "jest": "^27.1.0",
    "jest-fetch-mock": "^3.0.3",
    "node-dev": "^7.1.0",
    "notios": "^0.0.6",
    "onchange": "^7.1.0",
    "pathpida": "^0.17.0",
    "postcss": "^8.3.6",
    "postcss-jsx": "^0.36.4",
    "postcss-syntax": "^0.36.2",
    "prettier": "^2.3.2",
    "prettier-plugin-organize-imports": "^2.3.3",
    "react-dnd": "^14.0.4",
    "react-dnd-html5-backend": "^14.1.0",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recess-order": "^2.6.0",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.2"
  },
  "engines": {
    "node": "^16",
    "npm": "forbidden, use npm",
    "pnpm": ">=7",
    "yarn": "forbidden, use npm"
  }
}
